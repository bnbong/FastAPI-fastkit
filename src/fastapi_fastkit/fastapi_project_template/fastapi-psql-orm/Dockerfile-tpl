FROM python:3.12-slim

WORKDIR /app

COPY requirements.txt .
COPY setup.py .
COPY src/ src/
COPY tests/ tests/
COPY scripts/ scripts/

RUN pip install --no-cache-dir -r requirements.txt

ENV PYTHONPATH=/app
ENV ENVIRONMENT=production

EXPOSE 8000

CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000"]
